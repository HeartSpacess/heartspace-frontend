    <script>
        function searchFriends() {
            let query = document.getElementById("friend-search").value.toLowerCase();
            let results = document.getElementById("search-results");
            results.innerHTML = ""; 
            if (query === "john") {
                results.innerHTML = "<li>John Doe <button>Add Friend</button></li>";
            } else {
                results.innerHTML = "<li>No results found</li>";
            }
        }

        function acceptRequest(button) {
            button.parentElement.innerHTML = "Accepted ✅";
        }

        function declineRequest(button) {
            button.parentElement.innerHTML = "Declined ❌";
        }

        function addFriend(button) {
            button.innerText = "Request Sent ✅";
            button.disabled = true;
        }
    </script>
