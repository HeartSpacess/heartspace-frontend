    <main>
        <section>
            <h2>Search for Friends</h2>
            <input type="text" id="friend-search" placeholder="Enter name or username">
            <button onclick="searchFriends()">Search</button>
            <ul id="search-results"></ul>
        </section>

        <section>
            <h2>Friend Requests</h2>
            <ul id="friend-requests">
                <li>User1 <button onclick="acceptRequest(this)">Accept</button> <button onclick="declineRequest(this)">Decline</button></li>
                <li>User2 <button onclick="acceptRequest(this)">Accept</button> <button onclick="declineRequest(this)">Decline</button></li>
            </ul>
        </section>

        <section>
            <h2>Suggested Friends</h2>
            <ul id="suggested-friends">
                <li>User3 <button onclick="addFriend(this)">Add Friend</button></li>
                <li>User4 <button onclick="addFriend(this)">Add Friend</button></li>
            </ul>
        </section>
